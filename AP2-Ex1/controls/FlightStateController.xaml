<UserControl x:Class="AP2_Ex1.controls.FlightStateController"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AP2_Ex1.controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Width="800">
    <Grid>
        <Slider x:Name="stateControllerSlider"  Maximum="{Binding VM_NumberOfCSVLines}" DataContext="SliderContext" Value="{Binding VM_CurrentNumberOfLine, Mode=OneWayToSource}" ValueChanged="stateControllerSlider_ValueChanged" HorizontalAlignment="Left" Margin="92,225,0,0" VerticalAlignment="Top" Width="590" SmallChange="1"/>

    </Grid>
</UserControl>
